{
	"name": "Code - OSS",

	"build":{
		"dockerfile": ".gitpod.Dockerfile"
	},

	// VS Code extensions and settings
	"customizations": {
		"vscode": {
			"settings": {
				"resmon.show.battery": false,
				"resmon.show.cpufreq": false
			},
			"extensions": [
				"dbaeumer.vscode-eslint",
				"mutantdino.resourcemonitor"
			]
		}
	},

	"hostRequirements": {
		"memory": "9gb"
	}
}
